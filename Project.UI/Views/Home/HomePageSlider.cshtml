    
    @model List<Product>
    
    <!-- Hero Slider Begin -->
<section class="hero-slider">
    <div class="hero-items owl-carousel">
        @foreach (var item in Model)
        {
            <div class="single-slider-item set-bg" data-setbg="@item.ImagePath">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h3 style="color:red">@item.Name</h3>
                            <h4 style="color:red">@item.UnitPrice</h4>
                            <a href="#" class="primary-btn">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- Hero Slider End -->

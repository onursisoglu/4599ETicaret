
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Sablonum.cshtml";
}
@model List<Product>

<div class="container mt-2">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="card">
                    <img class="card-img-top" src="@item.ImagePath" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">@item.Name</h4>
                        <p class="card-text">Some example text some example text. John Doe is an architect and engineer</p>
                        <label>@item.UnitPrice</label>
                        <a href="#" class="btn btn-primary">Sepete Ekle</a>
                    </div>
                </div>
            </div>
        }

    </div>


</div>


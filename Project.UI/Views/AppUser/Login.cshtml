
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Sablonum.cshtml";
}


@model LoginViewModel


    <div class="container">
        <div class="row mb-4 mt-4">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="panel-title">Giriş Yap</h3>
                    </div>
                    <div class="card-body">
                        <form accept-charset="UTF-8" action="/AppUser/Login" method="post" role="form">
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                                    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz" })
                                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="RememberMe" type="checkbox" value="true"> Beni Hatırla
                                    </label>
                                </div>
                                <input class="btn btn-lg btn-success btn-block" type="submit" value="Giriş Yap">
                            </fieldset>
                        </form>
                        <hr />
                        <center><h4>veya</h4></center>
                        <a href="/AppUser/Register" class="btn btn-lg btn-block">KAYIT OL</a>
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>





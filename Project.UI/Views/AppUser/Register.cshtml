
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Sablonum.cshtml";
}

@model AppUserViewModel

<div class="row mt-4 mb-4">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 col-lg-push-5">
        <div class="card">
            <div class="card-header">
                <h3 class="panel-title"> Kayıt Ol</h3>
            </div>
            <div class="card-body">
               @* @Html.ValidationSummary()*@
                <form enctype="multipart/form-data" accept-charset="UTF-8" action="/AppUser/Register" method="post" role="form">
                    <fieldset>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Email Adresi : </b>
                                </div>
                                <div class="col-sm-7">

                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x=>x.Email, null, new { @class="text-danger"})
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Kullanıcı Adı : </b>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Ad : </b>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Soyad : </b>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Şifre  : </b>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Password, null,new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Şifre Tekrar : </b>
                                </div>
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(x => x.ComparePassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ComparePassword, null, new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-5">
                                    <b>Fotoğraf : </b>
                                </div>
                                <div class="col-sm-7">
                                    <input type="file" class="form-control" name="Image"/>
                                </div>
                            </div>

                        </div>
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Kayıt Ol">
                    </fieldset>
                </form>
                <hr />
                <center><span>veya</span></center>

                <h5 class="float-left">Hesabın var mı ?</h5> <a href="/AppUser/Login" class="btn btn-lg">Giriş Yap</a>
            </div>
        </div>
    </div>

    <div class="col-sm-3"></div>
</div>



@{
    ViewBag.Title = "Duzenle";
}
@model Category
<h2>Kategori Duzenle</h2>


<form class="form-horizontal" action="/Admin/Kategori/Duzenle" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2">Kategori Adı:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="Kategori Adı giriniz">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Açıklama:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" value="@Model.Description" name="Description" placeholder="Açıklama Giriniz">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Aktif mi ? :</label>
        <div class="col-sm-10">
            <input type="checkbox" id="isactive" checked="@Model.IsActive" name="IsActive">
        </div>
    </div>


    <input type="hidden" value="@Model.ID" name="ID" />

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning">Güncelle</button>
        </div>
    </div>
</form>

@section scriptlerim{
    <script>
        $('#isactive').change(function () {
            var ischeck = $(this).prop('checked');
            
            $(this).val(ischeck);
        })
    </script>
}





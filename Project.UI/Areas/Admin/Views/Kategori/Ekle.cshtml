
@{
    ViewBag.Title = "Ekle";
}

<h2>Kategori Ekle</h2>

<form class="form-horizontal" action="/Admin/Kategori/Ekle" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" >Kategori Adı:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Name"  placeholder="Kategori Adı giriniz">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Açıklama:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Description"  placeholder="Açıklama Giriniz">
        </div>
    </div>
   
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>



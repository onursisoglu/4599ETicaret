
@{
    ViewBag.Title = "Index";
}

@model List<SubCategory>

<a href="/Admin/AltKategori/Ekle" class="btn btn-success">Yeni AltKategori Ekle</a>

<h2>Alt Kategori Listesi</h2>




<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Ana Kategori</th>
            <th>Eklenme Tarihi</th>
            <th>Ekleyen Kişi</th>
            <th>Aktif mi ?</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.MainCategory.Name</td>
            <td>@item.CreatedDate</td>
            <td>@item.CreatedUserName</td>
            <td>

                @if (item.IsActive)
                {
                    <span style="color:green">Aktif</span>
                }
                else
                {
                    <span style="color:red">Pasif</span>
                }
            </td>
            <td>
                <a href="/Admin/AltKategori/Duzenle/@item.ID" data-toggle="tooltip" title="Düzenle"><i class="glyphicon glyphicon-edit text-warning"></i></a>
                <a href="/Admin/AltKategori/Sil/@item.ID" data-toggle="tooltip" title="Sil"><i class="glyphicon glyphicon-trash text-danger"></i></a>
            </td>
        </tr>
        }

    </tbody>

</table>